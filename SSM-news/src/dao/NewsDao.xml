<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"E:\workSpace_jsp\mybatis_dvd\WebRoot\mybatis-3-mapper.dtd">
<mapper namespace="dao.NewsDao">
	<cache></cache>
	<select id="showAllNews" resultType="entity.News_detail">
		SELECT * FROM news_detail
		<where>
			<if test="title!=null">
				title like CONCAT ('%',#{title},'%')
			</if>
		</where>
		order by createdate DESC
	</select>
	<select id="showAllCommentById" resultType="entity.News_comment">
		SELECT * FROM news_comment where newsid=#{id}
	</select>
	<insert id="addComment" parameterType="entity.News_comment">
		insert into news_comment
		<if test="author!=null">
			(newsid,content,author,createdate)VALUE(#{newsid},#{content},#{author},NOW())
		</if>
		<if test="author==null">
			(newsid,content,createdate)VALUE(#{newsid},#{content},NOW())
		</if>
	</insert>
	<delete id="deleteNewsById">
		DELETE FROM news_detail WHERE id=#{id}
	</delete>
	<delete id="deleteComment">
		DELETE FROM news_comment WHERE newsid=#{id}
	</delete>
</mapper>